package engine.object;

import engine.graphics.Mesh;
import engine.graphics.Renderer;
import engine.math.Vector3f;

public class GameObject {
	
	private Vector3f position, axis ,scale;
	private Mesh mesh;


	public GameObject(Vector3f position, Vector3f axis, Vector3f scale, Mesh mesh, Renderer renderer) {
		super();
		this.position = position;
		this.axis = axis;
		this.scale = scale;
		this.mesh = mesh;
	}
	
	public void update() {
		position = Vector3f.addVectors(position, new Vector3f(0.1f,0.1f,0f));
	}


	public Vector3f getPosition() {
		return position;
	}


	public Vector3f getAxis() {
		return axis;
	}


	public Vector3f getScale() {
		return scale;
	}


	public Mesh getMesh() {
		return mesh;
	}

}
